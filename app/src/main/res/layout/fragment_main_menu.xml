<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6DE95"
    tools:context=".fragments.MainMenuFragment">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/btnGotoProfile"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:backgroundTint="@color/colorPrimary"
            android:text="👽"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/tvProfileMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:gravity="center|center_horizontal"
            android:text="@string/profile_string"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGotoShopUpgrades"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:backgroundTint="@color/colorPrimary"
            android:text="🛒"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/tvShopMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:gravity="center|center_horizontal"
            android:text="@string/shop_string"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:backgroundTint="@color/colorPrimary"
            android:text="👋"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/tvLogoutMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center|center_horizontal"
            android:text="@string/logout_string"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnGotoPlay"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:backgroundTint="@color/colorPrimary"
            android:backgroundTintMode="src_in"
            android:text="🕹"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/tvPlayMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:gravity="center|center_horizontal"
            android:text="@string/play_string"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGotoOrders"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:backgroundTint="@color/colorPrimary"
            android:text="🛍️"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/tvInventoryMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:gravity="center|center_horizontal"
            android:text="@string/orders_string"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGotoRanking"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:backgroundTint="@color/colorPrimary"
            android:text="👑"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/tvRankingMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center|center_horizontal"
            android:text="@string/ranking_string"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_string"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGotoConfigurationMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/configuration_string"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />
</androidx.constraintlayout.widget.ConstraintLayout>