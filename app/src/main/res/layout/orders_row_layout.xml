<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="190dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/textbox"
    android:backgroundTint="@color/colorPrimary">

    <ImageView
        android:id="@+id/ivOrder"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvPriceOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/price_string"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toEndOf="@+id/ivOrder"
        app:layout_constraintTop_toBottomOf="@+id/tvDescriptionOrder" />

    <TextView
        android:id="@+id/tvQuantityOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/amount_string"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toEndOf="@+id/ivOrder"
        app:layout_constraintTop_toBottomOf="@+id/tvPriceOrder" />

    <TextView
        android:id="@+id/tvBoughtAtOn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:lines="2"
        android:text="@string/bought_at_on_string"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toEndOf="@+id/ivOrder"
        app:layout_constraintTop_toBottomOf="@+id/tvQuantityOrder" />

    <TextView
        android:id="@+id/tvNameOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="@android:string/unknownName"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivOrder"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescriptionOrder"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:lines="2"
        android:text="@string/description_string"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toEndOf="@+id/ivOrder"
        app:layout_constraintTop_toBottomOf="@+id/tvNameOrder" />


</androidx.constraintlayout.widget.ConstraintLayout>
